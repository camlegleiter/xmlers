  </servlet>
  <servlet-mapping>
    <servlet-name>GetResponses</servlet-name>
    <url-pattern>/app/getResponses</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Edit</servlet-name>
    <servlet-class>Edit</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Edit</servlet-name>
    <url-pattern>/app/edit</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>UpsertForm</servlet-name>
    <servlet-class>UpsertForm</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpsertForm</servlet-name>
    <url-pattern>/app/upsert</url-pattern>
  </servlet-mapping>
  
  <servlet>
